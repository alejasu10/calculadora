<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="4"
            android:orientation="vertical"
            android:rowCount="5"
            tools:ignore="UselessLeaf,UselessParent">

            <Button
                android:id="@+id/clear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="borrar"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/raiz"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="signo_raiz"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="√"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/porcentaje"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/white"
                android:onClick="signo_porcentaje"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/borrarU"
                android:onClick="borrar_ultimo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="⌫"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number7"
                android:onClick="number7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number8"
                android:onClick="number8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number9"
                android:onClick="number9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/signo_por"
                android:onClick="signo_por"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number6"
                android:onClick="number6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number5"
                android:onClick="number5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number4"
                android:onClick="number4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/signo_menos"
                android:onClick="signo_menos"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="3"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number3"
                android:onClick="number3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number2"
                android:onClick="number2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number1"
                android:onClick="number1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="2"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/signo_mas"
                android:onClick="signo_mas"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="3"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/punto"
                android:onClick="punto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="4"
                android:layout_column="0"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="."
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/number0"
                android:onClick="number0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/signo_dividir"
                android:onClick="signo_dividir"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="4"
                android:layout_column="2"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="÷"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/signo_igual"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="4"
                android:layout_column="3"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="="
                android:textColor="@color/white"
                android:onClick="resultado"
                tools:ignore="HardcodedText" />

        </GridLayout>

    </FrameLayout>



</LinearLayout>




